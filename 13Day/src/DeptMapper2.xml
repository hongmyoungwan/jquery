<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbb">
	
   <select id="deptCount" resultType="int">
     select count(*) from dept
   </select>
  <select id="selectByDeptno" parameterType="int" 
          resultType="hashmap">
    select deptno xxx, dname,loc
    from dept
    where deptno = #{deptno}
 </select>
 
  <select id="selectJoin" parameterType="string" 
          resultType="hashmap">
 <!-- emp과 dept 조인 ename='SMITH' -->
   select *
   from emp 
   join dept
   using (deptno)
   where ename = #{ename}
 </select>
 
   <select id="selectByDnameLoc" parameterType="hashmap" resultType="Dept">
    select *
    from dept
    where dname = #{xxx} and loc = #{yyy}
   </select>
   
 <select id="selectPaging"
          resultType="Dept">
    select deptno , dname,loc
    from dept
    order by deptno desc
 </select>
</mapper>



